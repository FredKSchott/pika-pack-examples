{
  "name": "@pika/lambda-package",
  "private": true,
  "version": "0.0.0-semantically-versioned",
  "description": "Example of bundling a Lambda for AWS",
  "main": "src/index.js",
  "author": "Ryan Kennedy <ryaninvents@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development babel-node src/server.js",
    "build": "NODE_ENV=production pack build",
    "start": "npm run -s dev"
  },
  "dependencies": {
    "express": "^4.16.4",
    "serverless-http": "^1.9.1"
  },
  "devDependencies": {
    "@babel/node": "^7.2.2",
    "@pika/pack": "^0.3.2",
    "@pika/plugin-build-node": "^0.3.11",
    "@pika/plugin-standard-pkg": "^0.3.11",
    "@ryaninvents/plugin-bundle-dependencies": "^1.1.4",
    "@ryaninvents/plugin-bundle-zip-node": "^1.3.1",
    "babel-eslint": "^10.0.1",
    "babel-preset-react-app": "^7.0.1",
    "eslint": "^5.14.1",
    "eslint-config-react-app": "^3.0.7",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@ryaninvents/plugin-bundle-zip-node"
      ],
      [
        "@ryaninvents/plugin-bundle-dependencies",
        {
          "prefix": "nodejs/node_modules"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "semistandard",
      "react-app"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**",
          "*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8
          },
          "modules": false
        }
      ],
      [
        "babel-preset-react-app",
        {
          "absoluteRuntime": false,
          "helpers": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": 8
              }
            }
          ],
          [
            "babel-preset-react-app",
            {
              "modules": true,
              "helpers": false
            }
          ]
        ]
      },
      "development": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": 8
              }
            }
          ],
          [
            "babel-preset-react-app",
            {
              "modules": true,
              "helpers": false
            }
          ]
        ]
      }
    }
  }
}
